<div class="row">
  <!-- Category Sidebar -->
  <div class="col-md-3 mb-4">
    <div class="card border-0 shadow-sm">
      <div class="card-body">
        <h5 class="card-title"><i class="bi bi-funnel me-1"></i>Categories</h5>
        <div class="list-group list-group-flush">
          <a href="/products" class="list-group-item list-group-item-action <%= !selectedCategory ? 'active' : '' %>">
            All Products
          </a>
          <% categories.forEach(function(cat) { %>
            <a href="/products?category=<%= encodeURIComponent(cat) %>"
               class="list-group-item list-group-item-action <%= selectedCategory === cat ? 'active' : '' %>">
              <%= cat %>
            </a>
          <% }); %>
        </div>
      </div>
    </div>
  </div>

  <!-- Products Grid -->
  <div class="col-md-9">
    <!-- Search Bar -->
    <div class="card border-0 shadow-sm mb-4">
      <div class="card-body">
        <form action="/products" method="GET" class="d-flex">
          <div class="input-group">
            <span class="input-group-text"><i class="bi bi-search"></i></span>
            <input type="text" class="form-control" name="search"
                   placeholder="Search products..." value="<%= search %>">
            <% if (selectedCategory) { %>
              <input type="hidden" name="category" value="<%= selectedCategory %>">
            <% } %>
            <button type="submit" class="btn btn-primary">Search</button>
          </div>
        </form>
      </div>
    </div>

    <% if (products.length === 0) { %>
      <div class="text-center py-5">
        <i class="bi bi-inbox display-1 text-muted"></i>
        <h4 class="mt-3 text-muted">No products found</h4>
        <p class="text-muted">
          <% if (search) { %>
            Try a different search term.
          <% } else { %>
            Check back later for new arrivals!
          <% } %>
        </p>
      </div>
    <% } else { %>
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% products.forEach(function(product) { %>
          <div class="col">
            <div class="card h-100 border-0 shadow-sm product-card">
              <img src="<%= product.image_url || 'data:image/svg+xml,%3Csvg xmlns=%27http://www.w3.org/2000/svg%27 width=%27300%27 height=%27200%27 viewBox=%270 0 300 200%27%3E%3Crect width=%27300%27 height=%27200%27 fill=%27%230066cc%27/%3E%3Ctext x=%27150%27 y=%27105%27 text-anchor=%27middle%27 fill=%27white%27 font-family=%27Arial%27 font-size=%2718%27%3ENo Image%3C/text%3E%3C/svg%3E' %>"
                   class="card-img-top product-image"
                   alt="<%= product.name %>"
                   onerror="this.onerror=null;this.src='data:image/svg+xml,%3Csvg xmlns=%27http://www.w3.org/2000/svg%27 width=%27300%27 height=%27200%27 viewBox=%270 0 300 200%27%3E%3Crect width=%27300%27 height=%27200%27 fill=%27%230066cc%27/%3E%3Ctext x=%27150%27 y=%27105%27 text-anchor=%27middle%27 fill=%27white%27 font-family=%27Arial%27 font-size=%2718%27%3ENo Image%3C/text%3E%3C/svg%3E'">
              <div class="card-body d-flex flex-column">
                <div class="d-flex justify-content-between align-items-start mb-2">
                  <h5 class="card-title mb-0"><%= product.name %></h5>
                </div>
                <% if (product.category) { %>
                  <span class="badge bg-light text-primary mb-2 align-self-start"><%= product.category %></span>
                <% } %>
                <p class="card-text text-muted flex-grow-1">
                  <%= product.description ? product.description.substring(0, 100) + (product.description.length > 100 ? '...' : '') : 'No description available' %>
                </p>
                <div class="d-flex justify-content-between align-items-center mt-auto">
                  <span class="h5 text-primary mb-0">$<%= parseFloat(product.price).toFixed(2) %></span>
                  <a href="/products/<%= product.id %>" class="btn btn-outline-primary btn-sm">
                    <i class="bi bi-eye me-1"></i>View Details
                  </a>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>
  </div>
</div>
